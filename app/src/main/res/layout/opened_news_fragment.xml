<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.news.openedNews.OpenedNewsFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/oppenedNewsHeading"
        android:text="Test Head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/oppenedNewsDiscript"
        android:text="Test Disctpreqdas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/oppenedNewsHeading"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/oppenedTimeDate"
        android:text="19:20 19 May"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/oppenedNewsDiscript"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/deleteNewsBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удалить новость"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>